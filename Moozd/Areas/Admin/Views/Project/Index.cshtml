@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container p-0">
    <div class="mt-1">
        <a href="~/admin/Project/add" class="btn btn-primary">Add</a>
    </div>
    <div class="mt-3 w-100">
        <table class="table table-bordered table-hover w-100 centering">
            <thead class="table-info">
                <tr>
                    <th>№</th>
                    <th><p class="p-0 m-0">Name</p></th>
                    <th><p class="p-0 m-0">Type</p></th>
                    <th><p class="p-0 m-0">Description</p></th>
                    <th><p class="p-0 m-0">URL</p></th>
                    <th><p class="p-0 m-0">Thumbnail</p></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (index, item) in Model.Select((value, i) => (i + 1, value)))
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td class="w-25">@item.Description</td>
                        <td style="width: 15%;">@item.WebsiteLink</td>
                        <td> <img src="@("~/Images/"+item.ThumbNail)" asp-append-version="true" width="100px" height="100px" /></td>
                        <td>@Html.ActionLink("View images", "Index", "ProjectImage", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Service", new { id = item.ID }, new { @class = "btn btn-danger" })</td>
                        <td>@Html.ActionLink("Edit", "Edit", "Service", new { id = item.ID }, new { @class = "btn btn-success" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


