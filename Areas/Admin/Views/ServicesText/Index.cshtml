@model ServicesText

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container p-0 mt-5">
    <div class="mt-3 w-100">
        <table class="table table-bordered table-hover w-100 centering">
            <thead class="table-info">
                <tr>
                    <th><p class="p-0 m-0">Main Title</p></th>
                    <th><p class="p-0 m-0">Title</p></th>
                    <th><p class="p-0 m-0">Little Text</p></th>
                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>@Model.MainTitle</td>
                        <td>@Model.Title</td>
                        <td>@Model.LittleText</td>
                    </tr>
            </tbody>
        </table>
    </div>

    <div class="card shadow-lg border-0 rounded-lg mt-5">
        <div class="card-header"><h3 class="text-center font-weight-light my-4">Edit Service Header</h3></div>
        <div class="card-body">
            <form method="post" action="/admin/servicestext/Edit">
                    <input asp-for="ID" type="hidden"/>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <div class="form-floating mb-3 mb-md-3">
                            <label for="Title" class="w-100 text-center mb-3">New Title</label>
                            <div class="w-100">
                                <textarea asp-for="Title" name="Title" id="text"></textarea>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-floating mb-3 mb-md-3">
                            <label for="LittleText" class="w-100 text-center mb-3">New Text</label>
                            <div class="w-100">
                                <textarea asp-for="LittleText" name="LittleText" id="text1"></textarea>
                                <span asp-validation-for="LittleText" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-floating mb-3 mb-md-3">
                            <label for="MainTitle" class="w-100 text-center mb-3">New Main Title</label>
                            <div class="w-100">
                                <textarea asp-for="MainTitle" name="MainTitle" id="text2"></textarea>
                                <span asp-validation-for="MainTitle" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-4 mb-0 d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>

<script>
    ClassicEditor
        .create(document.querySelector('#text'), {
            toolbar: [
                'heading', '|', 'bold', 'italic', 'underline', '|',
                'bulletedList', 'numberedList', '|',
                'alignment', '|', 'undo', 'redo'
            ]
        })
        .catch(error => {
            console.error(error);
        });
         ClassicEditor
        .create(document.querySelector('#text1'), {
            toolbar: [
                'heading', '|', 'bold', 'italic', 'underline', '|',
                'bulletedList', 'numberedList', '|',
                'alignment', '|', 'undo', 'redo'
            ]
        })
        .catch(error => {
            console.error(error);
        });
    ClassicEditor
        .create(document.querySelector('#text2'), {
            toolbar: [
                'heading', '|', 'bold', 'italic', 'underline', '|',
                'bulletedList', 'numberedList', '|',
                'alignment', '|', 'undo', 'redo'
            ]
        })
        .catch(error => {
            console.error(error);
        });
</script>
