@model IEnumerable<Step>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container p-0">
    <div class="mt-1 d-flex justify-content-between align-items-center">
        <a href="~/admin/Step/add/@ViewData["ServiceID"]" class="btn btn-primary">Add</a>
        <a href="~/admin/Service/index" class="btn btn-primary">Services</a>
    </div>
    <div class="mt-3 w-100">
        <table class="table table-bordered table-hover w-100 centering">
            <thead class="table-info">
                <tr>
                    <th>№</th>
                    <th><p class="p-0 m-0">Title</p></th>
                    <th><p class="p-0 m-0">Description</p></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var (index, item) in Model.Select((value, i) => (i + 1, value)))
                {
                    <tr>
                        <td>@index</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Step", new { serviceID = item.ServiceID, id = item.ID }, new { @class = "btn btn-danger" })</td>
                        <td>@Html.ActionLink("Edit", "Edit", "Step", new { id = item.ID}, new { @class = "btn btn-success" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
